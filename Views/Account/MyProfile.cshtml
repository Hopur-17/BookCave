@model BookCave.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h1>My profile</h1>

<form asp-action="MyProfile" asp-controller="Account" class="form-horizontal" method="POST">
    <div class="form-group">
        <input type="text" autofocus="autofocus" class="form-control" asp-for="FirstName" placeholder="Enter your first name..." value="@Model.FirstName" />
        <span asp-validation-for="FirstName" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" asp-for="LastName" placeholder="Enter your Last name..." value="@Model.LastName" />
        <span asp-validation-for="LastName" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" asp-for="FavoriteBook" placeholder="What is your favorite book?" value="@Model.FavoriteBook" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Update profile" />
        <div class="text-danger">@ViewData["ErrorMessage"]</div>
    </div>
</form>