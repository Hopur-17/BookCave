@model List<BookCave.Models.ViewModels.BookListViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
@foreach(var book in Model)
{
    <div class="col-xs-6 col-md-3">
      <div class="thumbnail">
        <a asp-controller="Home" asp-action="BookDetails" asp-route-id="@book.Id"><img src="@book.Image" alt="@book.Title"></a>
        <div class="caption">
          <h3><a asp-controller="Home" asp-action="BookDetails" asp-route-id="@book.Id">@book.Title</a></h3>
          <h4>@book.Author</h4>
          <div class="stars-outer">
            <div class="stars-inner">
              <p class="ratings">@book.Rating</p>
            </div>
          </div>
          <p>@book.Price $</p>
          <p><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-warning" role="button">Add to cart</a></p>
        </div>
      </div>
    </div>
}
</div>