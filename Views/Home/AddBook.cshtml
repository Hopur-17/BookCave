@model BookCave.Models.InputModels.BookInputModel

@{
    ViewData["Title"] = "Add book!";
}

<h2>Create a new book!</h2>

<form class="form-horizontal" method="POST">
    <div class="form-group">
        <label class="control-label col-xs-2" asp-for="Title">Title: </label>
        <div class="col-xs-10">
            <input type="text" asp-for="Title">
        </div>
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Author">Author: </label>
        <input type="text" asp-for="Author">
        <span asp-validation-for="Author"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Image">Image source: </label>
        <input type="text" asp-for="Image">
        <span asp-validation-for="Image"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Price">Price: </label>
        <input type="text" asp-for="Price">
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Genre">Genre: </label>
        <input type="text" asp-for="Genre">
        <span asp-validation-for="Genre"></span>
    </div>

    <div class"form-group">
        <label class="control-label" asp-for="ReleaseDate">Release date: </label>
        <input type="text" asp-for="ReleaseDate">
        <span asp-validation-for="ReleaseDate"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Rating">Rating: </label>
        <input type="text" asp-for="Rating">
        <span asp-validation-for="Rating"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Description">Description: </label>
        <input type="text" asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>

    <button class="btn btn-warning" type="submit">Submit Book!</button>
</form>