@model BookCave.Models.ViewModels.BookDetailsViewModel

@{
    ViewData["Title"] = "Edit book!";
}

<h2>Edit " @Model.Title "</h2>
<form method="POST">
  <div class="form-group col-md-6">
    <label asp-for="Title">Title: </label>
    <input type="text" class="form-control" asp-for="Title">
  </div>
  <div class="form-group col-md-6">
    <label asp-for="Author">Author: </label>
    <input type="text" class="form-control" asp-for="Author">
  </div>
  <div class="form-group col-md-6">
    <label asp-for="Image">Image Source: </label>
    <input type="text" class="form-control" asp-for="Image">
  </div>
  <div class="form-group col-md-6">
    <label asp-for="Genre">Genre: </label>
    <select asp-for="Genre" multiple class="form-control">
        <option value="Action" default>Action</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Romance">Romance</option>
        <option value="Mystery">Mystery</option>
    </select>
  </div>
  <div class="form-group col-md-4">
    <label asp-for="ReleaseDate">Release date: </label>
    <input type="date" class="form-control" asp-for="ReleaseDate">
  </div>
  <div class="form-group col-md-4">
    <label asp-for="Rating">Rating: </label>
    <input type="double" class="form-control" asp-for="Rating">
  </div>
  <div class="form-group col-md-4">
    <label asp-for="Price">Price: </label>
    <input type="double" class="form-control" asp-for="Price">
  </div>
  <div class="form-group col-md-12">
    <label asp-for="Description">Description: </label>
    <textarea class="form-control" rows="5" asp-for="Description"></textarea>
  </div>
  <button type="submit" class="btn btn-warning">Save changes</button>
</form>